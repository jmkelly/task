@using TaskItem = Task.Core.TaskItem
@model TaskItem

<div class="modal-overlay" onclick="this.remove()">
    <div class="modal-content" onclick="event.stopPropagation()">
        <h2>Edit Task</h2>
        <form hx-post="/Index?handler=EditTask" hx-target="#board" hx-swap="innerHTML" hx-on:htmx:after-request="this.closest('.modal-overlay').remove()">
            <input type="hidden" name="uid" value="@Model.Uid" />
            <div class="form-group">
                <label for="title">Title *</label>
                <input type="text" id="title" name="title" value="@Model.Title" required maxlength="200">
            </div>

            <div class="form-group">
                <label for="description">Description</label>
                <textarea id="description" name="description" rows="3">@Model.Description</textarea>
            </div>

            <div class="form-group">
                <label for="priority">Priority</label>
                <select id="priority" name="priority">
                    <option value="low" selected="@(Model.Priority == "low")">Low</option>
                    <option value="medium" selected="@(Model.Priority == "medium")">Medium</option>
                    <option value="high" selected="@(Model.Priority == "high")">High</option>
                </select>
            </div>

            <div class="form-group">
                <label for="dueDate">Due Date</label>
                <input type="date" id="dueDate" name="dueDate" value="@Model.DueDateString">
            </div>

            <div class="form-group">
                <label for="tags">Tags (comma-separated)</label>
                <input type="text" id="tags" name="tags" value="@Model.TagsString" placeholder="tag1, tag2, tag3">
            </div>

            <div class="form-group">
                <label for="project">Project</label>
                <input type="text" id="project" name="project" value="@Model.Project" placeholder="Project name">
            </div>

            <div class="form-actions">
                <button type="submit" class="btn-primary">Update Task</button>
                <button type="button" class="btn-secondary" onclick="this.closest('.modal-overlay').remove()">Cancel</button>
            </div>
        </form>
    </div>
</div>